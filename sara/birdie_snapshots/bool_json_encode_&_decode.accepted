---
version: 1.5.4
title: Bool JSON encode & decode
---
import entity
import gleam/dynamic/decode
import gleam/json

pub fn value_to_json(value: entity.Value) -> json.Json {
  case value {
    entity.Value(value:) ->
      json.object([
        #("value", json.bool(value)),
      ])
  }
}

pub fn value_json_decoder() -> decode.Decoder(entity.Value) {
  use value <- decode.field("value", decode.bool)
  decode.success(entity.Value(value:))
}

